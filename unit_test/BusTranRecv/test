INSERT BLOCKS
    DTS_BUFFER bufa,
    DTS_BUFFER bufb,
    STATE INOUT a,
    STATE INOUT b,
    STATE OUT btoaen,
    STATE OUT atoben;

INSERT EDGES
    BTWN btoaen.val AND bufb.en,
    BTWN atoben.val AND bufa.en,
    BTWN a.val AND (bufa.in, bufb.out),
    BTWN b.val AND (bufb.in, bufa.out);

INSERT INIT COND
    (atoben.val=0, btoaen.val=0),
    (a.val=0, atoben.val=1),
    (atoben.val=0),
    (b.val=1, atoben.val=1),
    (b.val=1, atoben.val=0, btoaen.val=1),
    (b.val=1, atoben.val=0, btoaen.val=1),
    (b.val=1, atoben.val=0, btoaen.val=1);

RUN;

SHOW RUN (atoben.val, btoaen.val, a.val, b.val);
